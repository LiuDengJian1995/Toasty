<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.toastydemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_normal_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEFAULT"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_success_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUCCESS"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_info_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFO"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_error_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ERROR"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_item_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITEM_TOAST"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>
